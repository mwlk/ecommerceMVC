@*define model*@

@model IEnumerable<Producer>
@*define viewData*@

@{
    ViewData["Title"] = "List of Producers";
}

@*write code*@
<div style="position: fixed; right: 25px;" class="text-white">
    <a asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> New</a>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover table-responsive-lg">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Profile)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Profile" alt="@item.FullName"
                                 style="max-width: 125px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <div class="container-fluid">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a> |

                                <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i>
                                    Detail
                                </a> |

                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>